#ifndef NUMEROS_EXTENSO_HPP
#define NUMEROS_EXTENSO_HPP

void imprimirNumeroExtenso(int numero);

#endif
#include "numeros_extenso.hpp"
#include <iostream>

void imprimirNumeroExtenso(int numero) {
    switch(numero) {
        case 0: std::cout << "Zero" << std::endl; break;
        case 1: std::cout << "Um" << std::endl; break;
        case 2: std::cout << "Dois" << std::endl; break;
        case 3: std::cout << "Três" << std::endl; break;
        case 4: std::cout << "Quatro" << std::endl; break;
        case 5: std::cout << "Cinco" << std::endl; break;
        case 6: std::cout << "Seis" << std::endl; break;
        case 7: std::cout << "Sete" << std::endl; break;
        case 8: std::cout << "Oito" << std::endl; break;
        case 9: std::cout << "Nove" << std::endl; break;
        case 10: std::cout << "Dez" << std::endl; break;
        default: std::cout << "Número inválido. Por favor, insira um número entre 0 e 10." << std::endl; break;
    }
}
#include "numeros_extenso.hpp"
#include <iostream>

int main() {
    int numero;
    std::cout << "Digite um número entre 0 e 10: ";
    std::cin >> numero;

    imprimirNumeroExtenso(numero);

    return 0;
}
